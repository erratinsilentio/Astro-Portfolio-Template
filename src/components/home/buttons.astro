<style>
  @keyframes letterBounce {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-12px);
    }
  }

  .letter-container:hover .letter {
    animation: letterBounce 0.2s forwards;
    animation-delay: var(--delay);
  }
