---
import { ViewTransitions } from "astro:transitions";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Kode+Mono:wght@400..700&family=Rajdhani:wght@300;400;500;600;700&family=Shadows+Into+Light&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body>
    <video
      src="/public/videos/dark2.mp4"
      loop
      autoplay
      muted
      class="opacity-30 object-cover w-full h-[100vh]"></video>
    <div
      class="absolute z-20 edges w-full grid grid-rows-[0px_1fr_20px] h-full items-center justify-items-center max-h-screen p-8 pb-20 gap-16 font-[family-name:var(--font-geist-sans)]"
    >
      <main
        class="flex flex-col gap-5 row-start-2 items-center sm:items-center"
      >
        <slot />
      </main>
    </div>
  </body>
</html>
